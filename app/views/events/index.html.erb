
<% if logged_in? %>
<div class="col-md-4 mt">
    <div class="content-panel">
      <table class="table table-hover playlist-table">
        <h4>WELCOME TO THE PARTY PAL</h4>
          <hr>
            <thead>

              <tr>
                <th class="col-md-3">CURRENT PARTIES</th>
                <th class="col-md-1"></th>
              </tr>
            </thead>
          <tbody>
            <% @events.each do |event| %>
              <tr>
                <td class="title col-md-3"><%= link_to event.name, event %></td>
                <% if current_user == event.owner %>
                  <th class="col-md-2"><%= button_to "Delete", event, method: :delete, class: "submitbutton" %></th>
                <% else %>
                  <th class="col-md-2"></th>
                <% end %>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
    <br><br>
      <%= link_to "Create a Party", new_event_path, class: "submitbutton" %>
  </div>
  <div>
<% else %>
  <h4>WELCOME TO THE PARTY PAL</h4>
    <p>Please sign up or login to join the party!</p><br>
      <%= link_to "Sign Up", new_user_path, class: "submitbutton" %>
      <%= link_to "Login", new_session_path, class: "submitbutton" %>
<% end %>