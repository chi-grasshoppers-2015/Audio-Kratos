<h1><%= @playlist.name %> playlist</h1>
<table class="pretty">
  <thead>
    <tr>
      <th></th>
      <th><%= sortable "title" %></th>
      <th><%= sortable "artist" %></th>
      <th><%= sortable "album" %></th>
      <th><%= sortable "track" %></th>
      <th><%= sortable "genre" %></th>
      <th>Remove from playlist holder</th>
    </tr>
  </thead>

  <tbody>
  <% @songs.each_with_index do |song,i| %>
    <tr>
      <td><%= i %></td>
      <td><%= link_to song.title, song.s3_url, :class => "song-link", :data => {index: i} %></td>
      <td><%= song.artist %></td>
      <td><%= song.album %></td>
      <td><%= song.track %></td>
      <td><%= song.genre %></td>
      <td>holder</td>
    </tr>
  <% end %>
  </tbody>
</table>




